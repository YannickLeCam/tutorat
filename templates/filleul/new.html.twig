{% extends 'base.html.twig' %}

{% block title %}Hello FilleulController!{% endblock %}

{% block body %}
    <div id="wrapper">
        <h1>Nouveau Filleul</h1>

        {{ form_start(form, {'attr': {'class': 'form'}}) }}

        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.nom) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.prenom) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.mail) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.telephone) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.mineure) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.specialite) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.faculte) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.parrain) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 buttonDivForm">
                {{ form_row(form.Valider) }}
            </div>
        </div>

        {{ form_end(form) }}

    </div>
    
{% endblock %}
