{% extends 'base.html.twig' %}

{% block title %}Hello MineureController!{% endblock %}

{% block body %}
    <div id="wrapper">
        <h1>Liste des examens</h1>
        <a id="ajout" href="{{path('app_importNote')}}"><i class="fa-solid fa-circle-plus"></i> Impoter des notes </a>
        {% if listExamen | length > 0 %}
            <table class="table table-striped table-hover">
                <thead>
                    <th>Nom de l'examen</th>
                    <th>Action</th>
                </thead>
                <tbody>
                    {% for examen in listExamen|sort((a, b) => a.nom <=> b.nom) %}
                        <tr>
                            <td>{{examen.nom}}</td>
                            <td><a href="{{path('app_noteEtudiant.delList',{nomExam:examen.nom})}}"><i class="fa-solid fa-trash-can" style="color: #ee5044;"></i></a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        {% else %}
            <p>Il n'y pas encore de mineure ajout√© . .    .</p>
        {% endif %}
    </div>
{% endblock %}
