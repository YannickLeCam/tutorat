{% extends 'base.html.twig' %}

{% block body %}
    <h1>Créer un examen</h1>

    {{ form_start(form) }}
        {{ form_row(form.examName) }}
        {{form_row(form.date)}}
        {{ form_row(form.file) }}
        <button type="submit" class="btn btn-primary">Créer</button>
    {{ form_end(form) }}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
{% endblock %}
