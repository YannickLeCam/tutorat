{% extends 'base.html.twig' %}

{% block title %}Hello SpecialiteController!{% endblock %}

{% block body %}
    <div id="wrapper">
        <h1>Liste des specialites</h1>
        <a id="ajout" href="{{path('app_specialite.new')}}"><i class="fa-solid fa-circle-plus"></i> Ajouter une spécialité </a>
        {% if specialites | length > 0 %}
            <table class="table table-striped table-hover">
                <thead>
                    <th>Nom de la spécialité</th>
                    <th>Action</th>
                </thead>
                <tbody>
                    {% for specialite in specialites|sort((a, b) => a.name <=> b.name) %}
                        <tr>
                            <td>{{specialite.name}}</td>
                            <td> <a href="{{path('app_specialite.edit',{id:specialite.id})}}"> <i class="fa-solid fa-pen-to-square" style="color: #FFD43B;"></i></a> <a href="{{path('app_specialite.del',{id:specialite.id})}}"><i class="fa-solid fa-trash-can" style="color: #ee5044;"></i></a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        {% else %}
            <p>Il n'y pas encore de specialité ajouté . .    .</p>
        {% endif %}
    </div>

{% endblock %}
