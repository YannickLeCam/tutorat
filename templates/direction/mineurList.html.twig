{% extends 'base.html.twig' %}

{% block title %}Hello MineureController!{% endblock %}

{% block body %}
    <div id="wrapper">
        <h1>Liste des mineures</h1>
        <a id="ajout" href="{{path('app_mineur.new')}}"><i class="fa-solid fa-circle-plus"></i> Ajouter une mineure </a>
        {% if mineures | length > 0 %}
            <table class="table table-striped table-hover">
                <thead>
                    <th>Nom de la mineure</th>
                    <th>Action</th>
                </thead>
                <tbody>
                    {% for mineure in mineures|sort((a, b) => a.nom <=> b.nom) %}
                        <tr>
                            <td>{{mineure.name}}</td>
                            <td> <a href="{{path('app_mineur.edit',{id:mineure.id})}}"> <i class="fa-solid fa-pen-to-square" style="color: #FFD43B;"></i></a> <a href="{{path('app_mineur.del',{id:mineure.id})}}"><i class="fa-solid fa-trash-can" style="color: #ee5044;"></i></a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        {% else %}
            <p>Il n'y pas encore de mineure ajout√© . .    .</p>
        {% endif %}
    </div>
{% endblock %}
